<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <shape>
            <gradient
                android:angle="180"
                android:startColor="#C2E59C"
                android:endColor="#64B3F4"
                android:type="linear"/>
            <corners
                android:radius="25dp"/>

            <!-- obwodka granic
            <stroke
                android:color="@color/Yelow"
                android:width="1dp"/>-->

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>
    </item>


    <item android:state_pressed="true" tools:ignore="StateListReachable">
        <shape>

            <solid
                android:color="@color/LightBlack"/>
            <!--
            <gradient
                android:angle="180"
                android:startColor="#c2e59c"
                android:endColor="#64b3f4"
                android:type="linear"/>-->

            <corners
                android:radius="25dp"/>
            <stroke
                android:color="@color/Green"
                android:width="1dp"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>
    </item>




</selector>
